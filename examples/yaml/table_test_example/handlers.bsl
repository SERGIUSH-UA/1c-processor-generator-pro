#Область ДобавитьЗаписи

&НаКлиенте
Процедура ДобавитьЗаписи(Команда)
    ДобавитьЗаписиНаСервере();
    Сообщить("Додано 10 записів");
КонецПроцедуры

&НаСервере
Процедура ДобавитьЗаписиНаСервере()
    Для Индекс = 1 По 10 Цикл
        НовийРядок = Данные.Добавить();
        НовийРядок.Номер = Индекс;
        НовийРядок.Описание = "Запис номер " + Формат(Индекс, "ЧГ=0");
    КонецЦикла;
КонецПроцедуры

#КонецОбласті

#Область УдалитьПоследнюю

&НаКлиенте
Процедура УдалитьПоследнюю(Команда)
    УдалитьПоследнююНаСервере();
    Сообщить("Видалено останній запис");
КонецПроцедуры

&НаСервере
Процедура УдалитьПоследнююНаСервере()
    Если Данные.Количество() > 0 Тогда
        Данные.Удалить(Данные.Количество() - 1);
    КонецЕсли;
КонецПроцедуры

#КонецОбласті
