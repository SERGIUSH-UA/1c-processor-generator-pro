// Подія форми: OnOpen
&НаКлиенте
Процедура ПриОткрытии(Отказ)
    // Ініціалізація форми
    Объект.ТестовыйРеквизит = "Привет, мир!";
    Объект.Число = 123.45;

    Сообщить("Форма открыта. Валидация BSL активна!");
КонецПроцедуры

// Команда: ВыполнитьКоманду
&НаКлиенте
Процедура ВыполнитьКоманду(Команда)
    // Перевіряємо валідацію на клієнті
    Если ПустаяСтрока(Объект.ТестовыйРеквизит) Тогда
        Сообщить("⚠️ Тестовый реквизит пустой!");
        Возврат;
    КонецЕсли;

    Если Объект.Число <= 0 Тогда
        Сообщить("⚠️ Число должно быть > 0");
        Возврат;
    КонецЕсли;

    // Викликаємо допоміжну функцію для обчислення
    Результат = ВычислитьРезультат(Объект.Число);

    Сообщить("✅ Проверка выполнена успешно! Результат: " + Формат(Результат, "ЧДЦ=2"));
КонецПроцедуры

// Допоміжна функція (буде автоматично виявлена генератором)
&НаКлиенте
Функция ВычислитьРезультат(Значение)
    // Просте обчислення для демонстрації
    Возврат Значение * 2 + 100;
КонецФункции
