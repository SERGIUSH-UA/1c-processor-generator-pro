&НаСервере
Функция ВыполнитьОбработкуНаСервере()

	Результат = Новый Структура("Успех, Сообщение");

	Попытка
		// Имитация обработки
		ТекстОперации = "";

		Если Объект.ТипОперации = "Импорт" Тогда
			ТекстОперации = "импорт данных";
		ИначеЕсли Объект.ТипОперации = "Экспорт" Тогда
			ТекстОперации = "экспорт данных";
		ИначеЕсли Объект.ТипОперации = "Обмен" Тогда
			ТекстОперации = "обмен данными";
		КонецЕсли;

		СообщениеРезультат = СтрШаблон(
			"Выполнен %1 в режиме ""%2"".",
			ТекстОперации,
			Объект.РежимРаботы
		);

		Если Объект.ВыполнитьПроверку Тогда
			СообщениеРезультат = СообщениеРезультат + " Проверка пройдена.";
		КонецЕсли;

		Результат.Успех = Истина;
		Результат.Сообщение = СообщениеРезультат;

	Исключение
		Результат.Успех = Ложь;
		Результат.Сообщение = ОписаниеОшибки();
	КонецПопытки;

	Возврат Результат;

КонецФункции
