// Обработчик изменения режима работы (InputField с ChoiceList)

Если Объект.РежимРаботы = "Автоматический" Тогда
	Объект.Статус = "Установлен автоматический режим";
	Объект.ВыполнитьПроверку = Истина;
	Объект.ВыполнитьОбработку = Истина;
ИначеЕсли Объект.РежимРаботы = "Ручной" Тогда
	Объект.Статус = "Установлен ручной режим";
	Объект.ВыполнитьПроверку = Ложь;
	Объект.ВыполнитьОбработку = Ложь;
ИначеЕсли Объект.РежимРаботы = "Пошаговый" Тогда
	Объект.Статус = "Установлен пошаговый режим";
	Объект.ВыполнитьПроверку = Истина;
	Объект.ВыполнитьОбработку = Ложь;
КонецЕсли;
