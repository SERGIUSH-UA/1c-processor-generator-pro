// ПечатьКарточкаНоменклатуры
// BSP Print Form Handler - Product Card
// Parameters: МассивОбъектов, ТабличныйДокумент

Макет = ПолучитьМакет("ПФ_MXL_КарточкаНоменклатуры");
ОбластьЗаголовок = Макет.ПолучитьОбласть("Заголовок");
ОбластьДанные = Макет.ПолучитьОбласть("Данные");

Для Каждого Ссылка Из МассивОбъектов Цикл

    // Page break for multiple items
    Если ТабличныйДокумент.ВысотаТаблицы > 0 Тогда
        ТабличныйДокумент.ВывестиГоризонтальныйРазделительСтраниц();
    КонецЕсли;

    // Header area
    ОбластьЗаголовок.Параметры.Наименование = Ссылка.Наименование;
    ТабличныйДокумент.Вывести(ОбластьЗаголовок);

    // Data area - fill all fields
    ОбластьДанные.Параметры.Код = Ссылка.Код;
    ОбластьДанные.Параметры.Артикул = Ссылка.Артикул;
    ОбластьДанные.Параметры.НаименованиеПолное = Ссылка.НаименованиеПолное;
    ОбластьДанные.Параметры.ВидНоменклатуры = Строка(Ссылка.ВидНоменклатуры);
    ОбластьДанные.Параметры.ЕдиницаИзмерения = Строка(Ссылка.ЕдиницаИзмерения);
    ОбластьДанные.Параметры.СтавкаНДС = Строка(Ссылка.СтавкаНДС);
    ТабличныйДокумент.Вывести(ОбластьДанные);

КонецЦикла;

ТабличныйДокумент.АвтоМасштаб = Истина;
ТабличныйДокумент.ОриентацияСтраницы = ОриентацияСтраницы.Портрет;
