// Command: Обработать
&НаКлиенте
Процедура ОбработатьОбработчик(Команда)
    // Валидация
    Если ПустаяСтрока(Объект.Заголовок) Тогда
        Сообщить("Заполните заголовок!");
        Возврат;
    КонецЕсли;

    Если ПустаяСтрока(Объект.ВажноеПоле) Тогда
        Сообщить("Заполните важное поле!");
        Возврат;
    КонецЕсли;

    // Формируем результат
    Объект.Результат = "Обработано: " + Объект.Заголовок + " / " + Объект.ВажноеПоле;

    Сообщить("Данные успешно обработаны!");
КонецПроцедуры
